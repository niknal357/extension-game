{
    "manifest_version": 3,
    "name": "Gnome Game",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "description": "A gnome game made by Paul Lundberg",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["*://powerschool.zis.ch/public/*"],
            "js": ["inject.js"]
        },
        {
            "matches": ["<all_urls>"],
            "js": ["toggleIcon.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"]
}
